{
    "schemaVersion": 1,
    "id": "splatcraft",
    "version": "${version}",
    "name": "splatcraft",
    "description": "Splatcraft is a Minecraft mod based on Nintendo's popular game Splatoon!\nThis mod aims to add items and mechanics based on the game in a cohesive way, such as Turf Wars, Weapons, Squid Transformations and many more!",
    "authors": [
        "Cibernet",
        "Octol1ttle"
    ],
    "contact": {
        "sources": "https://github.com/splatcraft/splatcraft-forge"
    },
    "license": "https://github.com/splatcraft/splatcraft-forge/blob/HEAD/LICENSE",
    "icon": "icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "net.splatcraft.fabric.SplatcraftFabric"
        ]
    },
    "mixins": [
        "splatcraft.mixins.json",
        "splatcraft-fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.16.9",
        "minecraft": "~1.21.1",
        "java": ">=21",
        "architectury": ">=13.0.2",
        "fabric-api": "*"
    }
}
